{
  "name": "Standard Label Addon",
  "version": "0.1",
  "manifest_version": 1,
  "description": "A Universal Addon for the Standard Information Sharing Label",
  "content_scripts" : [{
      "matches": ["https://www.facebook.com/*"],
      "css" : ["css/standardLabel.css"], 
      "js" : ["lib/jquery-1.7.2.min.js", "lib/tipsy.js","lib/popover.js","lib/QueryData.compressed.js","js/standardLabel.injection.js"]
  }],
  "browser_action": {
    "default_popup": "default.html",
    "default_icon": "images/default.19x19.png",     // optional
    "default_title": "Standard Label"      // optional; shown in tooltip
  },
  "background": {
    "scripts": ["js/standardLabel.background.js"]
  },
  "permissions": ["tabs", "http://www.facebook.com/", "https://www.facebook.com/"]
}
