{
  "name": "Ron Extension",
  "version": "1.0",
  "manifest_version": 2,
  "description": "The first extension that I made.",
  "content_scripts" : [{
      "matches": ["https://www.facebook.com/*"],
      "css" : ["bootstrap.css", "standardLabel.css"],
      "js" : ["jquery-1.7.2.min.js", "tipsy.js","popover.js","dv.js"]
  }],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]},
    "permissions": ["tabs", "http://www.facebook.com/", "https://www.facebook.com/"]
}

